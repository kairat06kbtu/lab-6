
import os

def list_contents(path):
    print("Directories:")
    print([d for d in os.listdir(path) if os.path.isdir(os.path.join(path, d))])

    print("\nFiles:")
    print([f for f in os.listdir(path) if os.path.isfile(os.path.join(path, f))])

    print("\nAll Contents:")
    print(os.listdir(path))

path = input("Enter the path: ")
list_contents(path)


import os

def check_access(path):
    print(f"Existence: {'Yes' if os.path.exists(path) else 'No'}")
    print(f"Readable: {'Yes' if os.access(path, os.R_OK) else 'No'}")
    print(f"Writable: {'Yes' if os.access(path, os.W_OK) else 'No'}")
    print(f"Executable: {'Yes' if os.access(path, os.X_OK) else 'No'}")

path = input("Enter the path: ")
check_access(path)


import os

def check_path(path):
    if os.path.exists(path):
        print("Path exists.")
        print("Directory:", os.path.dirname(path))
        print("Filename:", os.path.basename(path))
    else:
        print("Path does not exist.")

path = input("Enter the path: ")
check_path(path)



def count_lines(file_path):
    try:
        with open(file_path, 'r') as file:
            print("Number of lines:", sum(1 for _ in file))
    except FileNotFoundError:
        print("File not found.")

file_path = input("Enter file path: ")
count_lines(file_path)



def write_list_to_file(file_path, data_list):
    with open(file_path, 'w') as file:
        for item in data_list:
            file.write(str(item) + '\n')
    print("List written to file successfully.")

file_path = input("Enter file path: ")
data_list = ["Apple", "Banana", "Cherry"]
write_list_to_file(file_path, data_list)



import string

def generate_files():
    for letter in string.ascii_uppercase:
        with open(f"{letter}.txt", 'w') as file:
            file.write(f"This is file {letter}.txt")
    print("26 files created successfully.")

generate_files()





def copy_file(source, destination):
    try:
        with open(source, 'r') as src, open(destination, 'w') as dest:
            dest.write(src.read())
        print("File copied successfully.")
    except FileNotFoundError:
        print("Source file not found.")

source = input("Enter source file path: ")
destination = input("Enter destination file path: ")
copy_file(source, destination)







import os

def delete_file(file_path):
    if os.path.exists(file_path):
        if os.access(file_path, os.W_OK):
            os.remove(file_path)
            print("File deleted successfully.")
        else:
            print("No permission to delete the file.")
    else:
        print("File does not exist.")

file_path = input("Enter file path to delete: ")
delete_file(file_path)
